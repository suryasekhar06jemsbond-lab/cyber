{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Nyx Runtime",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}\\scripts\\build_windows.ps1",
                    "-Output",
                    "${workspaceFolder}\\build\\nyx.exe"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}