{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Nyx",
  "scopeName": "source.nyx",
  "fileTypes": ["nx", "ny"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#declarations" },
    { "include": "#builtins" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.nyx",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nyx",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.nyx",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nyx",
          "match": "\\b(if|else|switch|case|default|while|for|in|break|continue|try|catch|throw|return|import)\\b"
        },
        {
          "name": "storage.type.nyx",
          "match": "\\b(fn|class|module|typealias|let)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.nyx",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.nyx",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.function.nyx",
          "match": "\\b(fn)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.type.function.nyx" },
            "2": { "name": "entity.name.function.nyx" }
          }
        },
        {
          "name": "meta.class.nyx",
          "match": "\\b(class)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.type.class.nyx" },
            "2": { "name": "entity.name.type.class.nyx" }
          }
        },
        {
          "name": "meta.module.nyx",
          "match": "\\b(module)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.type.module.nyx" },
            "2": { "name": "entity.name.namespace.nyx" }
          }
        },
        {
          "name": "meta.typealias.nyx",
          "match": "\\b(typealias)\\s+([A-Za-z_][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "storage.type.nyx" },
            "2": { "name": "entity.name.type.nyx" }
          }
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.nyx",
          "match": "\\b(print|len|range|read|write|argc|argv|type|str|int|push|pop|abs|min|max|clamp|sum|all|any|type_of|is_int|is_bool|is_string|is_array|is_function|is_null|keys|values|items|has|object_new|object_set|object_get|class_new|class_with_ctor|class_set_method|class_name|class_instantiate0|class_instantiate1|class_instantiate2|class_call0|class_call1|class_call2|new|lang_version|require_version)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.nyx",
          "match": "\\?\\?|&&|\\|\\||==|!=|<=|>=|[+\\-*/%<>=!]"
        }
      ]
    }
  }
}
